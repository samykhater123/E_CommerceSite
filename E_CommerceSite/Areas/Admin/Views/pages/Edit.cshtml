@model E_CommerceSite.Models.pages

@{
    ViewData["Title"] = "Edit page";
}


<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id"/>
            <input type="hidden" asp-for="slug"/>
            <div class="form-group">
                <label asp-for="titel" class="control-label"></label>
                <input asp-for="titel" class="form-control" />
                <span asp-validation-for="titel" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="contant" class="control-label"></label>
               
                <textarea asp-for="contant" class="form-control"></textarea>
                <span asp-validation-for="contant" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


<script>
    CKEDITOR.replace("contant");
</script>
}
